<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:paddingVertical="10dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/grey_bg"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tittleTxt"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:singleLine="true"
        android:text="Başlık"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/orderDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Sipariş Tarihi: 01/01/2023"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/totalAmountTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittleTxt" />

    <TextView
        android:id="@+id/totalAmountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toplam: TL 100"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderDateTxt"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
